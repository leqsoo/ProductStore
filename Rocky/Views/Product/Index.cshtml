@model IEnumerable<Rocky_Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="AddOrUpdate" class="btn btn-primary">
                პროდუქტის დამატება
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%;">
            <thead>
                <tr>
                    <th>
                        სახელი
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td class="w-75 btn-group" role="group">
                            <a asp-route-Id="@obj.Id" asp-action="AddOrUpdate" class="btn btn-primary mx-2">
                                რედაქტირება
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                წაშლა
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product Exists</p>
    }
</div>

